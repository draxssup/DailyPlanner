{
    "intents": [
        {
            "tag": "gratitude",
            "patterns": ["thank you", "thanks", "thnx"],
            "responses": ["Always here for your help"]
        },
        {
            "tag": "greetings",
            "patterns": ["hi", "hello", "hey", "howdy", "good morning", "good afternoon", "good evening"],
            "responses": ["Hello! How can I help you?", "Hi there! What can I do for you?", "Hey! Need any assistance?"]
        },
        {
            "tag": "add_task",
            "patterns": ["add", "create", "new", "summon"],
            "responses": ["Sure, what is the task name?"]
        },
        {
            "tag": "delete_task",
            "patterns": ["delete task", "remove task", "cancel task", "erase task", "discard task"],
            "responses": ["Which task would you like to delete?"]
        },
        {
            "tag": "modify_task",
            "patterns": ["modify", "update", "change", "edit"],
            "responses": ["Which task would you like to modify?"]
        },
        {
            "tag": "list_tasks",
            "patterns": ["list", "show", "display", "view", "see","what task"],
            "responses": ["Here are your tasks:"]
        },
        {
            "tag": "complete_task",
            "patterns": ["complete", "finish", "done"],
            "responses": ["Which task have you completed?"]
        },
        {
            "tag": "help",
            "patterns": [
                "help",
                "what can you do",
                "how do I use this",
                "help"
            ],
            "responses": [
                "I can help you manage your tasks. You can add, delete, modify, or list tasks."
            ]
        },
        {
            "tag": "status",
            "patterns": ["status", " how many", "progress", "report", "review"],
            "responses": ["Your monthly review:"]
        }
    ]
}
